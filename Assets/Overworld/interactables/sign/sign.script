require 'Assets.Modules.signs'

go.property('stage', 0)
go.property('key', 0)

function init(self)
  y_pos(6)
end

function on_message(self, message_id, message, sender)
  if message_id == msgs.read_sign then
    if self.text == nil then
      self.text = sign_texts[self.stage][self.key]
    end
    print(self.text)
  end
end